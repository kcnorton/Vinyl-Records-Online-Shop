<div class="container product-show">

<p id="notice"><%= notice %></p>

<div class="col-xs-12 col-md-6">
	<div class="row product_show">

		<h1>
  		<%= @product.name %>
		</h1>

		<p>
  		<%= image_tag(@product.image_url, class: "img-responsive img-rounded img-zoom", data_zoom_image: @product.image_url) %>
		</p>

		<p>
  		<%= @product.description %>
		</p>
		<p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div>
		</p>

		<p>
			<span id="price">$<%= @product.price %></span>
		</p>

		<%= link_to 'Edit', edit_product_path(@product) %> |
		<%= link_to 'Back', products_path %>

		<%= form_tag "/payments/create" do %>
  		<%= render 'shared/stripe_checkout_button' %>
  		<%= hidden_field_tag(:product_id, @product.id) %>
		<% end %>
	</div>
</div>

<div class="col-xs-12 col-md-6">
	<div class="row product_comment">
		<h1>Reviews</h1>
		<%= render 'new_comment' %>
		<%= render 'comments' %>

		<%= will_paginate @comments %>
	</div>
</div>

</div>
